<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background"
        tools:context=".ui.OnboardActivity">

        <ImageView
            android:id="@+id/image_illustrated"
            android:layout_width="300dp"
            android:layout_height="380dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/muslim_boy"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/image_illustrated">

            <TextView
                android:id="@+id/big_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arabetic_latte"
                android:text="@string/al_quran"
                android:textColor="@color/primary_text_color"
                android:textSize="32sp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/small_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arabetic_latte"
                android:text="@string/quotes_1"
                android:textAlignment="center"
                android:layout_margin="24dp"
                android:textColor="@color/primary_text_color"
                android:textSize="20sp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_start"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:layout_margin="24dp"
            android:textColor="@color/white"
            android:background="@drawable/custom_button_1"
            android:textSize="20sp"
            android:text="Yuk Baca"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_illustrated" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

